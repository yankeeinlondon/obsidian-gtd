{
  "compilerOptions": {
    "baseUrl": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2021",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
	"allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "isolatedModules": true,
	"strictNullChecks": true,
	"types": [
		"obsidian", 
		"@codemirror/state", 
		"@codemirror/view", 
		"@codemirror/search", 
		"@codemirror/language", 
		"@codemirror/lang-javascript", 
		"@codemirror/autocomplete",
		"vue"
	],
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2021"
    ],
  },
  "include": [
    "src/**/*.ts", "src/helpers/electron.ts.ignore", "src/helpers/network.ts.ignore",
  ],
  "exclude": [
	"node_modules", "dist"
  ]
}
